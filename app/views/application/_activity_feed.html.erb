        <i class="fa fa-black-tie yellow"></i>
    <% end %>
      <div class="title"> <%="#{referral.student.first_name} #{referral.student.last_name}" %></div>
      <div class="desc"> <%= "#{referral.anecdotal}" %></div>
      <span class="date"> <%= display_time_elapsed(referral.created_at) %></span>
      <span class="separator">•</span>
      <span class="name"><%= referral.staff_member.professional_name %></span>
    </li>
    <% end %>

