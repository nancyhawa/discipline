    <% elsif referral.referral_type == "acclaim" %>
      <li class="task">
        <i class="fa fa-star green"></i>
    <% elsif referral.referral_type == "tardy" %>
      <li class="message">
        <i class="fa fa-clock-o blue"></i>
    <% elsif referral.referral_type == "uniform" %>
